<h1 class="current-category"><%= params[:category] %></h1>

<% if @books.count == 0 %>
<span>There are no books currently in this category. Be the first to start a book review in this category. sign up and start a book review.</span>

<% else %>

<div class="row">
    
<% @books.each do |book| %>
    <div class="col-md-3">
<a href="/books/<%= book.id %>">
    <%= image_tag book.book_img.url(:book_index), class: "book" %>
</a>
</div>
<!--<h2><%= link_to book.title, book_path(book) %></h2>-->
<% end %>
</div>
<% end %>